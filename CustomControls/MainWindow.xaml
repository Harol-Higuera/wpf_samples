<Window x:Class="CustomControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CustomControls.Views"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel
        HorizontalAlignment="Center">
        <views:AnalogClock ShowSeconds="True" TimeChanged="AnalogClock_OnTimeChanged"/>
        <TextBlock x:Name="TbTime" Text="00:00:00" Margin="10" FontSize="50"/>
    </StackPanel>
</Window>
