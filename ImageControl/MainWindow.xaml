<Window x:Class="ImageControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500">
    <StackPanel>
        <Label>Image from Internet</Label>
        <Image 
            Name="topImage"
            Source="https://upload.wikimedia.org/wikipedia/en/0/02/Homer_Simpson_2006.png"
            Width="100"
            Height="300"
            MouseUp="onTopImageMouseUp"
            ></Image>
        <Label>Image from Local</Label>
        <Image 
            Source="pack://siteoforigin:,,,/images/doraemon.jpg"
            Width="200"
            Height="200"
            ></Image>
    </StackPanel>
</Window>
