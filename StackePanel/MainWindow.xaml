<Window x:Class="StackePanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackePanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="800">
    <ScrollViewer>
        <StackPanel>
            <Button Width="100" HorizontalAlignment="Left">Button 1</Button>
            <Button Width="100" HorizontalAlignment="Center">Button 2</Button>
            <Button Width="100" HorizontalAlignment="Right">Button 3</Button>
            <Button HorizontalAlignment="Stretch">Button 3</Button>
            <StackPanel Orientation="Horizontal">
                <Button>Button 1</Button>
                <Button>Button 2</Button>
                <Button>Button 3</Button>
            </StackPanel>
            <Button Height="100" HorizontalAlignment="Center">Button 4</Button>
            <Button Height="100" HorizontalAlignment="Center">Button 5</Button>
            <Button Height="100" HorizontalAlignment="Center">Button 6</Button>
        </StackPanel>
    </ScrollViewer>
    
</Window>
